// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @default(uuid())
  name       String
  email      String
  password   String
  avatar     String
  created_at DateTime @default(now())
  updated_t  DateTime @updatedAt
  Movies     Movies[]
}

model Movies {
  id          String   @id @default(uuid())
  title       String
  description String
  rating      Int
  tags        String
  created_at  DateTime @default(now())
  updated_t   DateTime @updatedAt
  userId      String

  user Users @relation(fields: [userId], references: [id])
}
